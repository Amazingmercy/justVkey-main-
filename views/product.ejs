<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('partials/head') %>
    <title>Product</title>
    <link rel="stylesheet" href="../public/assets/styles/main.css">
    <style>
      /* Modern Product Page Styles */
      .product-page {
        background: linear-gradient(135deg, var(--off-white) 0%, var(--pure-white) 100%);
        padding: 4rem 0;
        min-height: 100vh;
      }

      .product-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
      }

      .product-card {
        background: var(--pure-white);
        border-radius: 24px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        border: 1px solid var(--medium-gray);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      }

      .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 30px 80px rgba(0, 0, 0, 0.15);
      }

      .product-image-section {
        position: relative;
        background: linear-gradient(135deg, var(--accent-cream), var(--off-white));
        padding: 3rem;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 500px;
      }

      .image-slider {
        position: relative;
        width: 100%;
        max-width: 500px;
        height: 400px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 16px;
        overflow: hidden;
        background: var(--pure-white);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      }

      .product-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      }

      .image-slider:hover .product-image {
        transform: scale(1.05);
      }

      .arrow {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, var(--accent-sage), #b8941f);
        color: var(--pure-white);
        border: none;
        border-radius: 50%;
        font-size: 1.2rem;
        font-weight: bold;
        cursor: pointer;
        z-index: 10;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0.8;
      }

      .arrow:hover {
        opacity: 1;
        transform: translateY(-50%) scale(1.1);
        box-shadow: 0 8px 25px rgba(212, 175, 55, 0.4);
      }

      .prev {
        left: 20px;
      }

      .next {
        right: 20px;
      }

      .product-info-section {
        padding: 3rem;
      }

      .product-badge {
        display: inline-block;
        background: linear-gradient(135deg, var(--accent-sage), #b8941f);
        color: var(--pure-white);
        padding: 0.5rem 1.2rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
      }

      .product-title {
        font-family: 'Playfair Display', serif;
        font-size: 2.5rem;
        font-weight: 600;
        color: var(--primary-black);
        margin-bottom: 1rem;
        line-height: 1.2;
      }

      .product-description {
        color: var(--dark-gray);
        font-size: 1.1rem;
        line-height: 1.7;
        margin-bottom: 2rem;
      }

      .price-section {
        background: var(--accent-cream);
        padding: 2rem;
        border-radius: 16px;
        margin-bottom: 2.5rem;
        text-align: center;
        border: 1px solid var(--medium-gray);
      }

      .price-label {
        font-size: 0.9rem;
        color: var(--dark-gray);
        margin-bottom: 0.5rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
      }

      .price-amount {
        font-family: 'Playfair Display', serif;
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--primary-black);
        margin: 0;
      }

      .quantity-cart-section {
        background: var(--off-white);
        padding: 2rem;
        border-radius: 16px;
        border: 1px solid var(--medium-gray);
      }

      .quantity-form {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        align-items: center;
      }

      .quantity-controls {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
      }

      .quantity-label {
        font-weight: 600;
        color: var(--primary-black);
        font-size: 1.1rem;
        text-align: center;
      }

      .quantity-input-group {
        display: flex;
        align-items: center;
        background: var(--pure-white);
        border: 2px solid var(--medium-gray);
        border-radius: 50px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
      }

      .quantity-btn {
        width: 45px;
        height: 50px;
        border: none;
        background: var(--primary-black);
        color: var(--pure-white);
        font-size: 1.2rem;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .quantity-btn:hover {
        background: var(--accent-sage);
        transform: scale(1.05);
      }

      .quantity-btn:active {
        transform: scale(0.95);
      }

      .quantity-input {
        width: 80px;
        height: 50px;
        border: none;
        text-align: center;
        font-size: 1.2rem;
        font-weight: 600;
        background: var(--pure-white);
        color: var(--primary-black);
        outline: none;
      }

      .quantity-input::-webkit-outer-spin-button,
      .quantity-input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
      }

      .quantity-input[type=number] {
        -moz-appearance: textfield;
      }

      .stock-info {
        margin-top: 1rem;
        text-align: center;
      }

      .stock-warning {
        color: #ff6b6b;
        font-weight: 600;
      }

      .stock-available {
        color: #28a745;
        font-weight: 600;
      }

      .add-to-cart-btn {
        background: linear-gradient(135deg, var(--primary-black), var(--soft-black));
        color: var(--pure-white);
        border: none;
        padding: 1rem 2.5rem;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 50px;
        cursor: pointer;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
        text-transform: uppercase;
        letter-spacing: 0.5px;
        position: relative;
        overflow: hidden;
      }

      .add-to-cart-btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, var(--accent-sage), #b8941f);
        transition: left 0.4s ease;
        z-index: 1;
      }

      .add-to-cart-btn:hover::before {
        left: 0;
      }

      .add-to-cart-btn span {
        position: relative;
        z-index: 2;
      }

      .add-to-cart-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
      }

      .image-indicators {
        position: absolute;
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        gap: 0.5rem;
        z-index: 10;
      }

      .indicator {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.5);
        cursor: pointer;
        transition: all 0.3s ease;
      }

      .indicator.active {
        background: var(--accent-sage);
        transform: scale(1.2);
      }

      .out-of-stock-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.8);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 20;
        border-radius: 16px;
      }

      .out-of-stock-label {
        background: linear-gradient(135deg, #d9534f, #c9302c);
        color: var(--pure-white);
        padding: 1rem 2rem;
        border-radius: 12px;
        font-size: 1.2rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        box-shadow: 0 8px 25px rgba(217, 83, 79, 0.3);
      }

      /* Mobile Responsiveness */
      @media (max-width: 768px) {
        .product-container {
          padding: 0 1rem;
        }

        .product-card {
          border-radius: 16px;
        }

        .product-image-section {
          padding: 2rem;
          min-height: 350px;
        }

        .image-slider {
          height: 300px;
        }

        .product-info-section {
          padding: 2rem;
        }

        .product-title {
          font-size: 2rem;
        }

        .price-amount {
          font-size: 2rem;
        }

        .quantity-form {
          gap: 1.5rem;
        }

        .quantity-controls {
          width: 100%;
        }

        .quantity-input-group {
          justify-content: center;
        }

        .add-to-cart-btn {
          width: 100%;
          max-width: 300px;
        }

        .arrow {
          width: 40px;
          height: 40px;
          font-size: 1rem;
        }

        .prev {
          left: 10px;
        }

        .next {
          right: 10px;
        }
      }

      /* Fade-in animation */
      .fade-in {
        opacity: 0;
        transform: translateY(30px);
        transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
      }

      .fade-in.show {
        opacity: 1;
        transform: translateY(0);
      }
    </style>
</head>

<body>
  <section class="product-page">
    <div class="product-container">
      <div class="product-card fade-in">
        <div class="row g-0">
          <!-- Image Section -->
          <div class="col-lg-6">
            <div class="product-image-section">
              <div class="image-slider">
                <span class="arrow prev" id="prevButton">&#9664;</span>
                <img id="productImage" src="<%= product.imageUrl[0] %>" alt="<%= product.name %>" class="product-image">
                <span class="arrow next" id="nextButton">&#9654;</span>

                <!-- Image Indicators -->
                <div class="image-indicators" id="imageIndicators">
                  <!-- Indicators will be generated by JavaScript -->
                </div>

                <!-- Out of Stock Overlay (if applicable) -->
                <% if (product.outOfStock==true) { %>
                  <div class="out-of-stock-overlay">
                    <div class="out-of-stock-label">Out of Stock</div>
                  </div>
                  <% } %>
              </div>
            </div>
          </div>

          <!-- Product Info Section -->
          <div class="col-lg-6">
            <div class="product-info-section">
              <div class="product-badge">Premium Product</div>

              <h1 class="product-title">
                <%= product.name %>
              </h1>

              <p class="product-description">
                <%= product.description %>
              </p>

              <!-- Price Section -->
              <div class="price-section">
                <div class="price-label">Price</div>
                <% if (currency==='NGN' ) { %>
                  <h3 class="price-amount">&#8358;<%= parseFloat(product.NGNprice).toFixed(2) %>
                  </h3>
                  <% } else { %>
                    <h3 class="price-amount">$<%= parseFloat(product.USDprice).toFixed(2) %>
                    </h3>
                    <% } %>
              </div>



              <!-- Quantity & Add to Cart -->
              <div class="quantity-cart-section">
                <% if (product.outOfStock==false) { %>
                  <form id="qtyForm" action="/cart/update/<%= product._id %>" method="GET" class="quantity-form">
                    <div class="quantity-controls">
                      <label class="quantity-label">Quantity:</label>
                      <!-- Quantity & Add to Cart -->
                      <div class="quantity-input-group">
                        <button type="button" class="quantity-btn quantity-minus"
                          onclick="decreaseQuantity(this)">-</button>
                        <input type="number" value="1" name="quantity" min="1" max="50" class="quantity-input"
                          id="quantityInput">
                        <button type="button" class="quantity-btn quantity-plus"
                          onclick="increaseQuantity(this)">+</button>
                      </div>




                    </div>
                    <button type="submit" class="add-to-cart-btn">
                      <span>üõí Add to Cart</span>
                    </button>
                  </form>

                  <!-- Stock Information -->

                  <% } else { %>
                    <div class="text-center">
                      <button class="add-to-cart-btn" disabled style="opacity: 0.5; cursor: not-allowed;">
                        <span>‚ùå Out of Stock</span>
                      </button>
                    </div>
                    <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%- include('partials/footer') %>

    <script>
      document.addEventListener('DOMContentLoaded', function () {
        // Parse the JSON string from the server
        let images = <%- JSON.stringify(product.imageUrl) %>;
        let currentIndex = 0;
        const productImage = document.getElementById("productImage");
        const imageIndicators = document.getElementById("imageIndicators");

        // Create indicators
        function createIndicators() {
          if (images.length > 1) {
            images.forEach((_, index) => {
              const indicator = document.createElement('div');
              indicator.className = `indicator ${index === 0 ? 'active' : ''}`;
              indicator.addEventListener('click', () => goToImage(index));
              imageIndicators.appendChild(indicator);
            });
          }
        }

        // Update indicators
        function updateIndicators() {
          const indicators = document.querySelectorAll('.indicator');
          indicators.forEach((indicator, index) => {
            indicator.classList.toggle('active', index === currentIndex);
          });
        }

        // Update image with smooth transition
        function updateImage(index) {
          productImage.style.opacity = "0.3";
          setTimeout(() => {
            productImage.src = images[index];
            productImage.style.opacity = "1";
            updateIndicators();
          }, 200);
        }

        // Go to specific image
        function goToImage(index) {
          currentIndex = index;
          updateImage(currentIndex);
        }

        // Next image
        function nextImage() {
          currentIndex = (currentIndex + 1) % images.length;
          updateImage(currentIndex);
        }

        // Previous image
        function prevImage() {
          currentIndex = (currentIndex - 1 + images.length) % images.length;
          updateImage(currentIndex);
        }

        // Initialize indicators
        createIndicators();

        // Add event listeners to buttons
        document.getElementById("nextButton").addEventListener('click', nextImage);
        document.getElementById("prevButton").addEventListener('click', prevImage);

        // Hide arrows if only one image
        if (images.length <= 1) {
          document.getElementById("nextButton").style.display = 'none';
          document.getElementById("prevButton").style.display = 'none';
        }

        // Auto-play slider (optional)
        let autoPlayInterval;

        function startAutoPlay() {
          if (images.length > 1) {
            autoPlayInterval = setInterval(nextImage, 4000);
          }
        }

        function stopAutoPlay() {
          clearInterval(autoPlayInterval);
        }

        // Start auto-play
        startAutoPlay();

        // Pause auto-play on hover
        const slider = document.querySelector('.image-slider');
        slider.addEventListener('mouseenter', stopAutoPlay);
        slider.addEventListener('mouseleave', startAutoPlay);

        // Fade-in animation
        const fadeElements = document.querySelectorAll('.fade-in');
        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('show');
            }
          });
        });

        fadeElements.forEach(element => {
          observer.observe(element);
        });

        // Trigger fade-in immediately for elements in viewport
        setTimeout(() => {
          fadeElements.forEach(element => {
            element.classList.add('show');
          });
        }, 100);
      });

      function increaseQuantity(button) {
        const input = button.parentElement.querySelector(".quantity-input");
        const max = parseInt(input.max, 10);
        let value = parseInt(input.value, 10);

        if (value < max) {
          input.value = value + 1;
        }
      }

      function decreaseQuantity(button) {
        const input = button.parentElement.querySelector(".quantity-input");
        const min = parseInt(input.min, 10);
        let value = parseInt(input.value, 10);

        if (value > min) {
          input.value = value - 1;
        }
      }

    </script>
</body>

</html>