

<%- include('partials/head') %>
<body>
  <!-- Header -->
  

  <!-- Hero Section -->
  <section class="hero-section text-center text-white py-5" style="background: url('/assets/images/about-hero.jpg') center/cover;">
    <div class="container">
      <h1 class="display-4 fw-bold">About Us</h1>
      <p class="lead">Discover the story behind JustVkey and our mission to redefine elegance.</p>
    </div>
  </section>

  <!-- About Us Section -->
  <section class="about-section pb-5">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-md-6">
          <h2 class="fw-bold">Who We Are</h2>
          <p>
            At JustVkey, we believe in celebrating individuality and craftsmanship. Our handcrafted designs
            are created with precision, ensuring each piece tells a unique story. Whether you're looking for
            a timeless accessory or a bold statement piece, our collection has something for everyone.
          </p>
        </div>
        <div class="col-md-6">
          <img src="/assets/images/icons/bg.png.jpg" alt="About JustVkey" class="img-fluid rounded">
        </div>
      </div>
    </div>
  </section>

  <!-- Mission Section -->
  <section class="mission-section bg-light py-5">
    <div class="container text-center">
      <h2 class="fw-bold">Our Mission</h2>
      <p class="lead">
        To empower individuals to express themselves through elegant and sustainable designs.
      </p>
    </div>
  </section>

  <!-- Team Section -->
  <section class="team-section py-5">
    <div class="container">
      <h2 class="text-center fw-bold mb-4">Meet Our Team</h2>
      <div class="row">
        <!-- Team Member 1 -->
        <div class="col-md-4 text-center mb-4">
          <img src="/assets/images/team-member-1.jpg" alt="Team Member" class="img-fluid rounded-circle mb-3" style="width: 150px;">
          <h5>John Doe</h5>
          <p class="text-muted">Founder & CEO</p>
        </div>
        <!-- Team Member 2 -->
        <div class="col-md-4 text-center mb-4">
          <img src="/assets/images/team-member-2.jpg" alt="Team Member" class="img-fluid rounded-circle mb-3" style="width: 150px;">
          <h5>Jane Smith</h5>
          <p class="text-muted">Creative Director</p>
        </div>
        <!-- Team Member 3 -->
        <div class="col-md-4 text-center mb-4">
          <img src="/assets/images/team-member-3.jpg" alt="Team Member" class="img-fluid rounded-circle mb-3" style="width: 150px;">
          <h5>Mike Johnson</h5>
          <p class="text-muted">Operations Manager</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Call-to-Action -->
  <section class="cta-section text-center text-dark py-5 bg-light">
    <div class="container">
      <h2 class="fw-bold">Join Our Journey</h2>
      <p class="lead">Stay connected and explore our latest collections and offers.</p>
      <a href="/shop" class="btn btn-outline-light mt-3">Shop Now</a>
    </div>
  </section>

  <!-- Footer -->
  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
