<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('partials/head') %>
</head>

<body>
  <!-- Header -->
  

  <!-- Hero Section -->
  <section class="hero-section text-center text-dark py-5" style="background: url('/assets/images/about-hero.jpg') center/cover;">
    <div class="container">
      <h3 class="display-5 text-dark"  style="font-weight: 700;">About Us</h3>
      
    </div>
  </section>

  <!-- About Us Section -->
  <section class="about-section mb-5">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-md-6">
          <h1 class="text-dark" style="font-weight: 900;">Welcome to</h1>
          <h2 class="text-secondary">JustVkey Luxuries</h2>
          <p class="lead">Discover the story behind JustVkey and our mission to redefine elegance.</p>

          <p style="font-size: large;" class="fw-bold">At JustVkey, we believe in celebrating individuality and craftsmanship. Our handcrafted designs
            are created with precision, ensuring each piece tells a unique story. Whether you're looking for
            a timeless accessory or a bold statement piece, our collection has something for everyone.</p>
        </div>
        <div class="col-md-6">
          <img src="/assets/images/icons/bg.png.jpg" alt="About JustVkey" class="img-fluid rounded">
        </div>
      </div>
    </div>
  </section>

  <!-- Mission Section -->
  <section class="mission-section bg-light py-5 mb-3">
    <div class="container text-center">
      <h2 class="text-secondary">Our Mission</h2>
      <p class="fw-bold">To empower individuals to express themselves through elegant and sustainable designs.</p>
      <a href="/shop" class="btn btn-outline-dark p-3">Shop Now</a>
    </div>
  </section>

  <!-- Products Section -->
  <section>
    <%- include('./partials/trendingProducts') %>
  </section>


  <!-- Call-to-Action -->
  <section class="cta-section text-center text-dark py-5 bg-light">
    <div class="container">
      <h2 class="fw-bold">Join Our Journey</h2>
      <p class="lead">Stay connected and explore our trending collections</p>
      <a href="/shop" class="btn btn-outline-dark p-3">Shop Now</a>
    </div>
  </section>

  <!-- Footer -->
  <%- include('partials/footer') %>

  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</body>

</html>
