<!-- Product Showcase -->
<section class="products-section py-5">
    <div class="container">
        <h2 class="text-center mb-4" style="font-weight: 700;">TRENDING COLLECTIONS</h2>
        <div class="row g-4">
            <% trendingProducts.forEach(product => { %>
                <div class="col-md-3 col-6">
                    <div class="card shadow-sm">
                        <% if (product.outOfStock === true) { %>
                            <img class="card-img-top img-fluid"style="height: 250px; width: 250px;" src="<%= product.imageUrl %>" alt="<%= product.name %>">
                            <span style="background-color: white; color: red; font-weight: bolder; text-align: center;">Out of stock</span>
                        <% } else { %>
                            <img class="card-img-top img-fluid"style="height: 250px; width: 250px;" src="<%= product.imageUrl %>" alt="<%= product.name %>">
                        <% } %>
                        <div class="card-body text-center">
                            <h5 class="card-title"><%= product.name %></h5>
                            <% if (currency === 'NGN') { %>
                                <p class="text-muted">&#8358;<%= parseFloat(product.NGNprice).toFixed(2) %></p>
                            <% } else { %>
                                <p class="text-muted">$<%= parseFloat(product.USDprice).toFixed(2) %></p>
                            <% } %>

                            <% if (!product.outOfStock) { %>
                                <a class="btn btn-dark" href="/cart/add/<%= product.id %>">Add to Cart</a>
                            <% }else {%>
                                <a class="btn btn-dark" href="/">Add to Cart</a>
                            <% }%>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</section>
