<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('partials/head') %>
</head>



<body>
  <!-- Header -->
  
  <!-- Hero Section -->
  <section class="hero-section position-relative text-center" style="min-height: 400px;">
    <!-- Image Div -->
    <div style="background: url('/assets/images/icons/bg.png.jpg') center/cover; height: 300px;"></div>
  
    <!-- Write-Up Div -->
    <div class="position-absolute start-50 translate-middle-x p-4" style="top: 250px; background: rgba(255, 255, 255, 0.9); border-radius: 10px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
      <h1 class="display-5" style="font-size: 30px; font-weight: 900; color: black;">Contact Us</h1>
      <p class="lead" style="font-size: 15px; font-weight: 900; color: black;">We're here to help. Reach out to us anytime!</p>
    </div>
  </section>
  

  <!-- Contact Information Section -->
  <section class="contact-info-section py-5 mt-5">
    <div class="container">
      <div class="row text-center">
        <div class="col-md-3 mb-4">
          <i class="fas fa-map-marker-alt fs-1 text-dark mb-3"></i>
          <h5 class="fw-bold">Our Address</h5>
          <p>Abuja, Nigeria.</p>
        </div>
        <div class="col-md-3 mb-4">
          <i class="fas fa-envelope fs-1 text-dark mb-3"></i>
          <h5 class="fw-bold">Email Us</h5>
          <p><a href="mailto:justvkeyluxuries@gmail.com" class="text-dark text-decoration">justvkeyluxuries@gmail.com</a></p>
        </div>
        <div class="col-md-3 mb-4">
          <i class="fas fa-phone-alt fs-1 text-dark mb-3"></i>
          <h5 class="fw-bold">Call Us</h5>
          <p><a href="tel:+2348001234567" class="text-dark">+234 813 799 4827</a></p>
        </div>
        <div class="col-md-3 mb-4">
          <i class="fab fa-instagram fa-2x fs-1 text-dark mb-3"></i>
          <h5 class="fw-bold">Follow us</h5>
          <p><a href="https://www.instagram.com/beadsby_justvkey?igsh=enJvYjBocGg2amgx" target="_blank" class="text-dark">Beads by Justvkey</a></p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section class="contact-form-section bg-light py-5">
    <div class="container">
      <h2 class="text-center fw-bold mb-4">Send Us a Message</h2>
      <form action="/contact" method="POST" class="row g-3">
        <div class="col-md-6">
          <label for="name" class="form-label">Your Name</label>
          <input type="text" class="form-control" id="name" name="name" placeholder="Enter your name" required>
        </div>
        <div class="col-md-6">
          <label for="email" class="form-label">Your Email</label>
          <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
        </div>
        <div class="col-12">
          <label for="subject" class="form-label">Subject</label>
          <input type="text" class="form-control" id="subject" name="subject" placeholder="Enter subject" required>
        </div>
        <div class="col-12">
          <label for="message" class="form-label">Your Message</label>
          <textarea class="form-control" id="message" name="message" rows="5" placeholder="Write your message here..." required></textarea>
        </div>
        <div class="col-12 text-center">
          <button type="submit" class="btn btn-dark btn-lg mt-3">Send Message</button>
        </div>
      </form>
    </div>
  </section>

  <!-- Map Section -->
  <section class="map-section">
    <div class="container-fluid p-0">
      <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d126093.84171706803!2d7.367294071549287!3d9.024246782435682!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x104e745f4cd62fd9%3A0x53bd17b4a20ea12b!2sAbuja%2C%20Federal%20Capital%20Territory!5e0!3m2!1sen!2sng!4v1736418180298!5m2!1sen!2sng" referrerpolicy="no-referrer-when-downgrade"width="100%" height="400" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
    </div>
  </section>

  <!-- Footer -->
  <%- include('partials/footer') %>

  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</body>

</html>
