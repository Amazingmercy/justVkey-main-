<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/header') %>
  <title>Edit Product - JustVkey</title>
</head>

<body>

  <% if (message) { %>
    <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
      <%= message %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>
  

  <div class="container">
    <h2 class="text-center">Edit Product</h2>


    <form action="/admin/products/edit/<%= product.id %>" method="POST" enctype="multipart/form-data" class="p-4 border rounded">
      <div class="mb-3">
        <label for="name" class="form-label">Product Name</label>
        <input type="text" name="name" id="name" class="form-control" value="<%= product.name %>" required />
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="description" id="description" class="form-control" rows="4" required><%= product.description %></textarea>
      </div>

      <div class="mb-3">
        <label for="price" class="form-label">Price (NGN)</label>
        <input type="number" name="NGNprice" id="NGNprice" class="form-control" value="<%= product.NGNprice %>" required />
      </div>

      <div class="mb-3">
        <label for="price" class="form-label">Price (USD)</label>
        <input type="number" name="USDprice" id="USDprice" class="form-control" value="<%= product.USDprice %>" required />
      </div>

      <div class="mb-3">
        <label for="trending" class="form-label">Set Trending:</label>
        <select name="trending" id="trending" class="form-select">
          <option value="true" <%= product.trending === 'true' ? 'selected' : '' %>>True</option>
          <option value="false" <%= product.trending === 'false' ? 'selected' : '' %>>False</option>
        </select>
      </div>

      <div class="mb-3">
        <label for="outOfStock" class="form-label">Set Out of Stock:</label>
        <select name="outOfStock" id="outOfStock" class="form-select">
          <option value="true" <%= product.outOfStock === 'true' ? 'selected' : '' %>>True</option>
          <option value="false" <%= product.outOfStock === 'false' ? 'selected' : '' %>>False</option>
        </select>
      </div>

      <div class="mb-3">
        <label for="category" class="form-label">Category</label>
        <select name="category" id="category" class="form-select" required>
          <option value="bags" <%= product.category === 'bags' ? 'selected' : '' %>>Bags</option>
          <option value="accessories" <%= product.category === 'accessories' ? 'selected' : '' %>>Accessories</option>
          <option value="functional_Art" <%= product.category === 'functional_Art' ? 'selected' : '' %>>Functional Art</option>
        </select>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Product Image</label>
        <input type="file" name="productImage" id="productImage" class="form-control" accept="image/*"  multiple/>
        <% if (product.imageUrl) { %>
          <img src="<%= product.imageUrl[0] %>" alt="<%= product.name %>" class="img-thumbnail mt-3" style="max-height: 150px;" />
        <% } %>
      </div>

      <button type="submit" class="btn btn-dark w-100">Update Product</button>
    </form>
  </div>

  <%- include('../partials/footer') %>
</body>

</html>
