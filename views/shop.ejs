<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('partials/head') %> 
</head>

<!-- Accessories Category -->
<section class="products-section py-5">
    <div class="container">
        <div class="row g-4">
            <% if (products.length === 0) { %>
                <div class="col-12 text-center">
                    <div class="alert alert-secondary" role="alert">
                        No products available in this collection. 
                    </div>
                    <a href="/categories/accessories" class="btn btn-dark mt-3">Browse Accessories Collection</a>
                </div>
            <% } else { %>
                <% products.forEach(product => { %>
                    <div class="col-md-2 col-4">
                        <div class="card shadow-sm">
                            <% if (product.outOfStock === true) { %>
                                <img class="card-img-top img-fluid"style="height: 250px; width: 250px;"  src="<%= product.imageUrl %>" alt="<%= product.name %>">
                                <span style="background-color: white; color: red; font-weight: bolder; text-align: center;">Out of stock</span>
                            <% } else { %>
                                <img class="card-img-top img-fluid"style="height: 250px; width: 250px;" src="<%= product.imageUrl %>" alt="<%= product.name %>">
                            <% } %>
                            <div class="card-body text-center">
                                <h5 class="card-title"><%= product.name %></h5>
                                <p class="text-muted">
                                    <% if (currency == 'NGN') { %>
                                        &#8358;<%= parseFloat(product.NGNprice).toFixed(2) %>
                                    <% } else { %>
                                        $<%= parseFloat(product.USDprice).toFixed(2) %>
                                    <% } %>
                                </p>
                                <% if (!product.outOfStock) { %>
                                    <a class="btn btn-dark" href="/cart/add/<%= product.id %>">Add to Cart</a>
                                <% }else {%>
                                    <a class="btn btn-dark" href="/">Add to Cart</a>
                                <% }%>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>
</section>

<%- include('partials/footer') %> 

