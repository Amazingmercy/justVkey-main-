


<%- include('partials/head') %> 


<!-- Accessories Category -->
<section class="products-section py-5">
    <div class="container">
        <h2 class="text-center mb-5 display-6"> TreasureðŸ”¥ðŸ”¥</h2>
        <div class="row g-4">
            <% if (products.length === 0) { %>
                <div class="col-12 text-center">
                    <div class="alert alert-secondary" role="alert">
                        No products available in this collection. 
                    </div>
                    <a href="/categories/bags" class="btn btn-dark mt-3">Browse Bags Collection</a>
                </div>
            <% } else { %>
                <% products.forEach(product => { %>
                    <div class="col-md-3 col-6">
                        <div class="card shadow-sm">
                            <div class="product-image-container" style="position: relative; width: 100%; height: 100%; overflow: hidden;">
                                <% if (Array.isArray(product.imageUrl)) { %>
                                    <!-- Use the first image as default -->
                                    <img class="card-img-top product-image img-fluid" 
                                        src="<%= product.imageUrl[0] %>" 
                                        alt="<%= product.name %>"
                                        data-images='<%= JSON.stringify(product.imageUrl) %>'>
                                <% } else { %>
                                    <!-- Single image case (Out of stock or single image product) -->
                                    <img class="card-img-top product-image img-fluid"
                                        src="<%= product.imageUrl[0] %>" 
                                        alt="<%= product.name %>"
                                        data-images='<%= JSON.stringify([product.imageUrl]) %>'>
                                <% } %>
    
                                <% if (product.outOfStock === true) { %>
                                    <span class="out-of-stock-label">Out of stock</span>
                                <% } %>
                            </div>
    
                            <div class="card-body text-center">
                                <h5 class="card-title"><%= product.name %></h5>
                                <% if (currency === 'NGN') { %>
                                    <p class="text-muted">&#8358;<%= parseFloat(product.NGNprice).toFixed(2) %></p>
                                <% } else { %>
                                    <p class="text-muted">$<%= parseFloat(product.USDprice).toFixed(2) %></p>
                                <% } %>
    
                                <% if (!product.outOfStock) { %>
                                    <a class="btn btn-dark" href="/cart/add/<%= product.id %>">Add to Cart</a>
                                <% } else { %>
                                    <a class="btn btn-dark disabled">Out of Stock</a>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
            <% } %>
        </div>
    </div>
</section>

<%- include('partials/footer') %> 
<script src="/scripts/script.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
  const elements = document.querySelectorAll(".fade-in");

  const observer = new IntersectionObserver(
    (entries, observer) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add("show");
          observer.unobserve(entry.target); // Stop observing once visible
        }
      });
    },
    { threshold: 0.2 } // Trigger when 20% of the element is visible
  );

  elements.forEach(element => {
    observer.observe(element);
  });
});

</script>



